@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Index";

    int i = 0;
}
<div class="page-title">
    <div class="row">
        <div class="col-6">
            <h4> Categoty </h4>
        </div>
        <div class="col-6">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        <svg class="stroke-icon">
                            <use href="/assets/svg/icon-sprite.svg#stroke-home"></use>
                        </svg>
                        <div class="col-md-4 offset-8">
                            <div class="form-group mb-0 me-0"></div>
                            <a asp-controller="Common" asp-action="CreateFiscalYear" asp-area="Admin" class="btn btn-primary"> <i data-feather="plus-square"> </i>नयाँ थप्नुहोस </a>
                        </div>
                    </a>
                </li>
                <li class="breadcrumb-item">  Categoty </li>
                <li class="breadcrumb-item active"> Index  </li>
            </ol>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <div class="tab-content" id="top-tabContent">
                <div class="tab-pane fade show active" id="top-home" role="tabpanel" aria-labelledby="top-home-tab">
                    <div class="row">
                        <div class="col-xxl-12 col-lg-12 box-col-12">
                            <div class="project-box b-light1-primary">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="table-responsive custom-scrollbar">
                                            <table class="display" id="basic-1">
                                                <thead>
                                                    <tr>
                                                        <th>   SN </th>
                                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                                      
                                                        <th>कार्य   </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)

                                                    {

                                                        <tr>
                                                            <td>@i</td>

                                                            <td>@item.Name</td>
                                                            
                                                            <td>
                                                                <a data-toggle="tooltip" data-placement="bottom" title="सच्याउनुहोस" asp-action="CreateLawType" asp-route-id="@item.Id">  <img src="~/images/logo/edit.svg" /></a>

                                                            </td>
                                                        </tr>
                                                        i++;

                                                    }
                                                </tbody>
                                            </table>
                                            <div class="text-end">
                                                <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-info btn-sm p-2">
                                                    <i class="fa fa-arrow-left" aria-hidden="true"> पछाडि फर्कनुहोस्</i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
